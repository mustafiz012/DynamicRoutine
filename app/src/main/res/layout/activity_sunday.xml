<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:padding="10dp"
                tools:context="routine.kuet.musta.Sunday">

    <ScrollView android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20sp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/createCourse">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Courses"
                android:id="@+id/createCourse"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_alignLeft="@+id/home"
                android:layout_alignStart="@+id/home"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/showCourses"
                android:background="@drawable/innerlayout"
                android:orientation="vertical"
                android:layout_marginTop="10sp"
                android:padding="10sp">
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="Delete One"
                android:id="@+id/deleteOne"
                android:layout_marginBottom="0dp" android:layout_gravity="center_horizontal"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:id="@+id/home"
                android:layout_above="@+id/deleteOne"
                android:layout_marginTop="20sp"
                android:layout_centerHorizontal="true"/>

        </LinearLayout>

    </ScrollView>




</RelativeLayout>
