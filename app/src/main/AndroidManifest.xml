<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="routine.kuet.musta" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Saturday"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_saturday" >
        </activity>
        <activity
            android:name=".Sunday"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_sunday" >
        </activity>
        <activity
            android:name=".Monday"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_monday" >
        </activity>
        <activity
            android:name=".Tuesday"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_tuesday" >
        </activity>
        <activity
            android:name=".Wednesday"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_wednesday" >
        </activity>
        <activity
            android:name=".Thursday"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_thursday" >
        </activity>
    </application>

</manifest>
